<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReporteDeUnaRegion2">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/info_por_region_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardBackgroundColor="@color/design_default_color_secondary"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alef_bold"
                android:text="Datos Por Región"
                android:textAlignment="textStart"
                android:textAppearance="?attr/textAppearanceHeadline3"
                android:textColor="@color/colorPrimary"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alef_bold"
                android:text="Seleccione una región en particular para obtener sus estadísticas correspondientes al día de hoy."
                android:textAlignment="textStart"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="@color/colorAccent"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/lista_regiones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:dropDownWidth="match_parent"
                    android:fontFamily="@font/alef_bold"
                    android:spinnerMode="dialog"></Spinner>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
